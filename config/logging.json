{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "default": {
      "format": "%(asctime)s %(levelname)s [%(name)s] %(message)s"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "default",
      "stream": "ext://sys.stdout"
    },
    "file": {
      "class": "logging.FileHandler",
      "level": "DEBUG",
      "formatter": "default",
      "filename": "local_debug.log",
      "mode": "w"
    }
  },
  "loggers": {
    "function_app": {
      "handlers": ["console", "file"],
      "level": "DEBUG",
      "propagate": false
    },
    "autonotion.notion_registry_daily_plan": {
      "handlers": ["console", "file"],
      "level": "DEBUG",
      "propagate": false
    }
  },
  "root": {
    "level": "INFO",
    "handlers": ["console"]
  }
}
